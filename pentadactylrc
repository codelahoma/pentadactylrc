

colorscheme zenburn

set complete=blf
set go=Cs

set newtab=all

" stop autocompletion on any type of open command
set autocomplete=!/ex/(.*open),.?

"hide tabline
map <A-Tab>n :set showtabline=never<CR>
map <A-Tab> :set showtabline=always<CR>
map <A-n> gt
map <A-b> gT
" left hand tabbing with dvorak
" go to next tab with <S-.>
noremap \> gt    
" go to next tab with <S-,>
noremap \< gT 
" shortcut to firefox dialogs
noremap D :dialog<space>
" show download dialog
map <A-d> :dialog downloads<CR>

" lb/fb goes to last/first tab
noremap ]b g$
noremap [b g^


" some plugin settings {{{

loadplugins '\.(js|penta)$'
set tabclose=previous,opener,left,right
set tabopen=link:right,orphan:end,external:end

set noscript-list=address
"noscript short-cuts
"noscript-sites
map <A-s> :set nss!=<A-Tab>
"noscript-tempsites
map <s> :set nst!=<A-Tab>
"noscript-object
map <A-c> :set nso!=<A-Tab>
"noscript-untrusted
map <A-C-s> :set nsu!=<A-Tab>

" }}}
group user

" vim:filetype=vim:foldmethod=marker
